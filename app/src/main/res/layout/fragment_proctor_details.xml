<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Entity.AddStudentDetails.AddStudentDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <EditText
        style="@style/HeadingFont"
        android:hint="Enter Registration No: "
        android:layout_gravity="center_horizontal"
        android:id="@+id/proctor_registration_no"
        android:gravity="center_horizontal"
        android:text="15BCE0618"/>
    <Button
        style="@style/BodyFont"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonlayout"
        android:text="Done"
        android:textAllCaps="true"
        android:id="@+id/proctor_detail_fragment_done"/>

    <TextView
        style="@style/HeadingFont"
        android:text="Proctor details are: "
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Name:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Proctor ID:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Sex:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_sex"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Age:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_age"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Office no:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_office_no"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Phone no:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_phone_no"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Email address:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_email_address"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="Birthdate:" />
        <TextView
            android:layout_marginTop="10dp"
            style="@style/BodyFont"
            android:text="  ______________"
            android:visibility="gone"
            android:id="@+id/proctor_birthdate"/>
    </LinearLayout>
</LinearLayout>